<div class="container mt-5">
  <form method="POST" action="/courses/{{course._id}}?_method=PUT">
    <div class="form-group">
      <label for="name">name</label>
      <input
        type="text"
        value="{{course.name}}"
        name="name"
        class="form-control"
        id="name"
      />
      <label for="description">description</label>
      <input
        type="text"
        value="{{course.description}}"
        name="description"
        class="form-control"
        id="description"
      />
      <label for="videoId">videoId</label>
      <input
        type="text"
        value="{{course.videoId}}"
        name="videoId"
        class="form-control"
        id="videoId"
      />
      <label for="level">level</label>
      <input
        type="text"
        value="{{course.level}}"
        name="level"
        class="form-control"
        id="level"
      />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>