<div class="row">
  <div class="col-lg-2"><h2>Menu</h2></div>
  <div class="col-lg-10">
    <div class="row">
      {{#each courses}}
        <div class="card" style="width: 18rem;">
          <a href="/courses/{{this.slug}}">
            <img
              class="card-img-top"
              src="{{this.image}}"
              alt="{{this.name}}"
            />
          </a>
          <div class="card-body">
            <a href="/courses/{{this.slug}}">
              <h5 class="card-title">{{this.name}}</h5>
            </a>
            <p class="card-text">{{this.description}}</p>
          </div>
        </div>
      {{else}}
        <h2>No courses</h2>
      {{/each}}
    </div>
  </div>
</div>